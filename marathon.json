{
  "id": "/tva/voting",
  "instances": 1,
  "cpus": 0.1,
  "mem": 256,
  "backoffSeconds": 1,
  "backoffFactor": 1.15,
  "maxLaunchDelaySeconds": 3600,
  "labels": {
    "owner": "tva",
    "HAPROXY_GROUP": "external",
    "HAPROXY_0_VHOST": "vote.thevotingapp.com",
    "HAPROXY_DEPLOYMENT_GROUP": "tva_voting",
    "HAPROXY_DEPLOYMENT_ALT_PORT": "10011"
  },
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "internal-registry-sys.marathon:5000/tva/voting:latest",
      "network": "BRIDGE",
      "portMappings": [
        { "containerPort": 80, "hostPort": 0, "servicePort": 10010 }
      ],
      "privileged": false,
      "forcePullImage": true
    }
  },
  "healthChecks": [
    {
      "path": "/",
      "protocol": "HTTP",
      "portIndex": 0,
      "gracePeriodSeconds": 120,
      "intervalSeconds": 30,
      "timeoutSeconds": 5,
      "maxConsecutiveFailures": 3,
      "ignoreHttp1xx": false
    }
  ],
  "upgradeStrategy": {
    "minimumHealthCapacity": 0,
    "maximumOverCapacity": 1
  }
}
