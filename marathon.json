{
  "id": "/tva/voting",
  "instances": 1,
  "cpus": 0.1,
  "mem": 256,
  "backoffSeconds": 1,
  "backoffFactor": 1.15,
  "maxLaunchDelaySeconds": 3600,
  "labels": {
    "owner": "tva",
    "HAPROXY_GROUP": "external",
    "HAPROXY_0_VHOST": "vote.thevotingapp.com",
    "HAPROXY_DEPLOYMENT_GROUP": "tva_voting"
  },
  "ipAddress": {
    "networkName": "devel",
    "labels": {
      "app": "voting",
      "group": "tva"
    },
    "discovery": {
      "ports": [
        { "number": 80, "name": "voting", "protocol": "tcp" }
      ]
    }
  },
  "container": {
    "type": "MESOS",
    "docker": {
      "image": "quay.io/h0tbird/tva-voting:latest",
      "forcePullImage": true
    },
    "portMappings": [
      { "servicePort": 10010 }
    ]
  },
  "healthChecks": [
    {
      "path": "/",
      "protocol": "MESOS_HTTP",
      "port": 80,
      "gracePeriodSeconds": 120,
      "intervalSeconds": 30,
      "timeoutSeconds": 5,
      "maxConsecutiveFailures": 3,
      "ignoreHttp1xx": false
    }
  ],
  "upgradeStrategy": {
    "minimumHealthCapacity": 0,
    "maximumOverCapacity": 1
  }
}
